{
    "name": "ts-command-handler",
    "description": "A quick and easy TypeScript command handler for Discord.JS",
    "scripts": {
        "start": "tsx src/index.ts",
        "start:watch": "tsx src/index.ts --watch",
        "start:shard": "tsc && node dist/shards.js",
        "build": "tsc",
        "dev:docker": "docker-compose --file docker-compose.dev.yml up"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/pg": "^8.11.11",
        "drizzle-kit": "^0.30.4",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "axios": "1.7.8",
        "discord.js": "^14.17.3",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.39.3",
        "express": "^4.21.2",
        "pg": "^8.13.3",
        "yaml": "^2.7.0"
    }
}
